# ================== Server ==================
PORT=3000
TEST_PORT=3001
NODE_ENV=development

# ================== Database ==================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=transync
DB_USER=root
DB_PASS=changeme
DB_DIALECT=mysql
# 同步结构 (开发可 true, 生产必须 false, 改为迁移)
SYNC_DB=false

# ================== JWT ==================
JWT_SECRET=please-change-me
JWT_EXPIRES_IN=24h

# ================== App ==================
APP_NAME=TranSync
APP_VERSION=1.0.0

# ================== Logging ==================
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=./logs/app.log

# ================== Security ==================
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
BCRYPT_SALT_ROUNDS=10

# ================== Email (optional) ==================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# ================== Upload ==================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
UPLOAD_PATH=./uploads

# ================== Redis ==================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== Production Override Examples =====
# NODE_ENV=production
# SYNC_DB=false
# LOG_FILE=true
# LOG_LEVEL=warn
# JWT_EXPIRES_IN=12h
# RATE_LIMIT_MAX=300
# BCRYPT_SALT_ROUNDS=12
# CORS_ORIGIN=https://your-domain.com
